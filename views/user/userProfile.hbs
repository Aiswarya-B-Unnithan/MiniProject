
{{>userheader}}
    <div class="container-xl px-4" style="margin-top: 100px; margin-bottom: 80px;">
    <!-- Account page navigation-->
    <nav class="nav nav-borders">
        <a class="nav-link active ms-0" href="/profile/resetPassword" >Password Reset</a>
        <a class="nav-link" href="/profile/manageAddress">Manage Address</a>
         <a class="nav-link" href="/myWallet" > My Wallet</a>
        <a class="nav-link" href="/order/allOrders">My Orders</a> 
        <a class="nav-link" href="/profile/viewProfile">Back</a> 
    </nav>
    <hr class="mt-0 mb-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Profile Picture</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="/{{userData.profilePictureUrl}}" alt="propic">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4"></div>
                    <!-- Profile picture upload button-->
                     <div>

                        {{!-- <button class="btn btn-primary" type="button"></button> --}}

                     </div>
                     {{#if userData}}
                     <h3 class="mt-5 mb-5">Hello {{userData.username}}</h3>
                   {{/if}}
                </div>
            </div>
        </div>

        
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <form action="/profile/edit-details" method="get">
                <div class="card-header">Account Details</div>
                <div class="card-body ml-3 p-5">
                    <h4 class="mb-3">Name :{{userData.username}} </h4>
                    <h4 class="mb-3">Email :{{userData.email}} </h4>
                    <h4 class="mb-3">Contact Number :{{userData.phoneNo}} </h4>
                    <button type="submit" class="btn btn-primary">EDIT</button>
                    
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{>userfooter}}

